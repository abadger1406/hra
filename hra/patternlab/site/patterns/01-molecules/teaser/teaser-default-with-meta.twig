<a class="teaser" href="#">
  <div class="teaser__image" style="background-image:url('{{ teaser.image|default('../../../images/teaser.png') }}')">
    <div class="teaser__meta">
      <div class="teaser__title">
        {% spaceless %}
          <ul class="teaser__title__meta">
              <li>30 Mar 2017</li>
              <li>News</li>
          </ul>
        {% endspaceless %}

        {{ teaser.title|default('Best practice') }}
      </div>
    </div>
  </div>
  <div class="teaser__description">
    <p>
      {{ teaser.description|default('Lorem ipsum dolor sit amet, consectetur adipiscing elit') }}
    </p>
    {% include "atoms-default-arrow" %}
  </div>
</a>