<a class="teaser" href="">
  <div class="teaser__image" style="background-image:url('{{ teaser.image }}')">
    <div class="teaser__meta">
      <div class="teaser__section-label">{{ teaser.label }}</div>
      <div class="teaser__title">
        {{ teaser.title }}
        {% include "atoms-default-arrow" %}
      </div>
    </div>
  </div>
  <div class="teaser__description">
    <p>
      {{ teaser.description }}
    </p>
  </div>
</a>